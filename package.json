{
  "name": "fastclient",
  "version": "1.0.0",
  "description": "Mini CRM system with PHP, HTMX, and Tailwind CSS",
  "scripts": {
    "dev": "bun run dev.ts",
    "build:css": "bun x @tailwindcss/cli -i resources/css/app.css -o public/assets/css/app.css",
    "build:js": "bun build resources/ts/app.ts --outdir public/assets/js --minify",
    "build": "bun run build:css && bun run build:js",
    "watch:css": "bun x @tailwindcss/cli -i resources/css/app.css -o public/assets/css/app.css --watch"
  },
  "dependencies": {
    "htmx.org": "^2.0.4"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.0.0",
    "tailwindcss": "^4.0.0",
    "browser-sync": "^3.0.3",
    "typescript": "^5.7.3"
  }
}
